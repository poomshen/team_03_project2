<meta charset="UTF-8">
 <title>급여처리</title>
 <!--  
  규칙 : 기본급여  : (정수값)
         기타수당  : 국가유공자 + 5년이상 근속
         총액      : (기본급 + 자격증 수당 + 자녀 수당 + 기타 수당)
         세금      : 기본급 * 0.22 
         실수령액  : 총액 - 세금
         연봉      : 총액 * 12 + 기본급
         천단위 콤마 처리 : 자율 (표현식 , 로직)
         10,000,000원 
 -->
 <script type="text/javascript">
/*  	
  
    var resultName;성명
 	var resultBasicPay;기본급
 	var resultLicense; 자격증 수당:
 	var resultChild; 자녀 수당
 	var resultEtc;기타 수당: 
 	var resultTotalPay 총액: 
 	resultTax 세금: 
 	resultPay 실수령액
 	resultYearlyPay  연봉:  */
  	var Name; 
 	var BasicPay;
 	var License;
 	var Child;
 	var Etc;
 	var TotalPay;
 	var Tax;
 	var Pay;
 	var YearlyPay;
 	
 	function insert(frm){
 		Name = frm.name.value;
 		BasicPay  = Number(frm.basicPay.value);
 		License =Number(frm.license.value);
 		Child = Number(frm.child.value);
 		//체크 했을 때만 
 		if(frm.merit.checked){
 		Etc = Number(frm.merit.value);
 		} 
 		if(frm.longterm.checked ){
 			if(Etc == null){
 			Etc =  Number(frm.longterm.value);
 			}else{
 			Etc +=  Number(frm.longterm.value);
 			}
 		}
 		
 		document.resultForm.resultName.value = Name;
 		document.resultForm.resultBasicPay.value = BasicPay;
 		document.resultForm.resultLicense.value = License;
 		document.resultForm.resultChild.value = Child;
 		document.resultForm.resultEtc.value = Etc;

         TotalPay =  BasicPay+License+Child+Etc;
         Tax =BasicPay*0.22;
         Pay = TotalPay-Tax;
         YearlyPay = TotalPay*12+BasicPay;
 		document.resultForm.resultTotalPay.value =  TotalPay;
 		document.resultForm.resultTax.value = Tax ;
 		document.resultForm.resultPay.value = Pay ;
 		document.resultForm.resultYearlyPay.value = YearlyPay ;
 	}
  </script>
 
</head>
<body>
