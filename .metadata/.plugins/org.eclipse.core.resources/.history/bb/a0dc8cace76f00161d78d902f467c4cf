<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>이미지 슬라이드</title>
<script type="text/javascript">
	window.onload = function(){
		var myphotos = Array("images/1.png" ,"images/2.png","images/3.png","images/4.png");
		//id  prv  onclick 이벤트 처리하고
		var prv = document.getElementById("prv");
		prv.onclick = function(){
			var  img = document.getElementById("imgs");
			var imgs = img.getAttribute("src");
			
			if(imgs == myphotos[0]){
				img.src = myphotos[--myphotos.length];
			}
		}
		
		
		//id next onclick 이벤트 처리하고
		var next = document.getElementById("next");
		next.onclick = function(){
			//alert(next);
		}
		
	}
</script>
</head>
<body>
  	<h3>DOM 슬라이드</h3>
  	<img alt="이미지" src="images/1.png" id="imgs" width="200" height="200">
  	<hr>
  	<a href="#"  id="prv">이전</a> ||<a href="#" id="next">다음</a>
</body>
</html>