<!DOCTYPE html>
<html>
<head>
<title>FileUpload</title>
<meta charset="utf-8">
<script>
   function fileLoad() {
      var fakepath = document.getElementById("filename").value;
      var realpath = fakepath.substr(fakepath.lastIndexOf("\\") + 1); //c:\한정
      document.write("<video width='400' controls>");
      document.write("<source src='" + realpath + "'>");
      document.write("</video>");
   }
   function urlLoad() {
      var url = document.getElementById("filename2").value;
      document.write("<video width='400' controls>");
      document.write("<source src='" + url + "' type='video/mp4'>");
      document.write("</video>");
   }
</script>
</head>
<body>
   <h3>파일열기</h3>
   <input type="file" id="filename" name="filename">
   <button onclick="fileLoad()">Load</button>
   <hr>
   <h3>URL열기</h3>
   <input type="text" id="filename2" name="filename2">
   <button onclick="urlLoad()">Load</button>
</body>
</html>