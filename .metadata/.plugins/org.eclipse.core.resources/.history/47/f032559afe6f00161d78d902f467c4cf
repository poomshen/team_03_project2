<script>
var myVideo = document.getElementById("video1");

function playPause() {
    if (myVideo.paused) {
       //비디오 재생
        myVideo.play();
       document.getElementById("btn").setAttribute("src", "../images/stop.jpg");
   } else {
      //비디오 정지
        myVideo.pause();
       document.getElementById("btn").setAttribute("src", "../images/play.jpg");
   }
}

function volMute() {
   if (myVideo.muted == true) {
      myVideo.muted = false;
      document.getElementById("btn2").setAttribute("src", "../images/off.jpg");
   } else {
      myVideo.muted = true;
      document.getElementById("btn2").setAttribute("src", "../images/on.jpg");
   }
} 

function volSet() {
   myVideo.volume = document.getElementById("volumebar").value;
}

function spdSet() {
   myVideo.playbackRate = document.getElementById("speed").value;
}

function viewTime() {
   document.getElementById("time").value=myVideo.duration;
}

function viewRunTime() {
   document.getElementById("start").value=myVideo.played.start(0);
   document.getElementById("end").value=myVideo.played.end(0);   
}

</script>
